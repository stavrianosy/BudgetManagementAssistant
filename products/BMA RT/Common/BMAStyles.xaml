    <DataTemplate x:Key="BMA_AdminNotification_ItemTemplate">
        <Grid HorizontalAlignment="Left" Width="540" Background="#FF8C8E97">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <!--IMAGE-->
                <Border Padding="1">
                    <StackPanel Width="63" Background="White" VerticalAlignment="Center">
                        <Image Stretch="UniformToFill" Opacity="1.0" Source="/Assets/Notification.png" />
                    </StackPanel>
                </Border>
                <!--CONTENT-->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <!-- TITLE -->
                        <RowDefinition Height="auto"></RowDefinition>
                        <!-- BUDGET DETAILS -->
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Background="{StaticResource ListViewItemPlaceholderBackgroundThemeBrush}">
                        <TextBlock  Margin="10 5 0 10" Text="{Binding Name}" Style="{StaticResource BMA_ListItemTile}" Foreground="{StaticResource ListViewItemOverlayForegroundThemeBrush}"/>
                    </Grid>
                    <Grid Grid.Row="1" Margin="15,0,15,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Time: " Foreground="{StaticResource ListViewItemOverlaySecondaryForegroundThemeBrush}" Style="{StaticResource BMA_ListItemText}" TextWrapping="NoWrap" />
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5 0">
                            <TextBlock Text="{Binding Time, Converter={StaticResource statusconverter}, ConverterParameter=timeFormat}" Foreground="{StaticResource ListViewItemOverlaySecondaryForegroundThemeBrush}" Style="{StaticResource BMA_ListItemText}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </DataTemplate>

