    <DataTemplate x:Key="BMA_Budget_ItemTemplate">
        <Grid HorizontalAlignment="Left" Width="540" Background="Brown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <!--IMAGE-->
                <Border Padding="1">
                    <StackPanel Width="185" VerticalAlignment="Center">
                        <Image Stretch="UniformToFill" Opacity="1.0" Source="/Assets/budget_180.png" />
                    </StackPanel>
                </Border>
                <!--CONTENT-->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <!-- BUDGET TITLE -->
                        <RowDefinition Height="auto"></RowDefinition>
                        <!-- BUDGET DETAILS -->
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Background="{StaticResource ListViewItemPlaceholderBackgroundThemeBrush}">
                        <TextBlock Margin="10 5 0 10" Text="{Binding Name}" Style="{StaticResource BMA_ListItemTile}" Foreground="{StaticResource ListViewItemOverlayForegroundThemeBrush}"/>
                    </Grid>
                    <Grid Grid.Row="1" Margin="15,0,15,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="20"></RowDefinition>
                            <RowDefinition Height="20"></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Amount: " Style="{StaticResource BMA_ListItemText}" Foreground="{StaticResource ListViewItemOverlaySecondaryForegroundThemeBrush}" />
                        <StackPanel Grid.Column="1" Margin="5 0" Orientation="Horizontal">
                            <TextBlock Style="{StaticResource BMA_ListItemText}" Text="{Binding Amount}" Foreground="{StaticResource ListViewItemOverlayForegroundThemeBrush}" />
                            <TextBlock Text="Balance: " Style="{StaticResource BMA_ListItemText}" Foreground="{StaticResource ListViewItemOverlaySecondaryForegroundThemeBrush}"  Margin="15 0 5 0" />
                            <TextBlock Style="{StaticResource BMA_ListItemText}" Text="{Binding Balance}" Foreground="{StaticResource ListViewItemOverlayForegroundThemeBrush}" />
                        </StackPanel>
                        <TextBlock Grid.Row="1" Text="Duration: " Foreground="{StaticResource ListViewItemOverlaySecondaryForegroundThemeBrush}" Style="{StaticResource BMA_ListItemText}" TextWrapping="NoWrap" />
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="5 0">
                            <TextBlock Text="{Binding FromDate, Converter={StaticResource statusconverter}, ConverterParameter=dateFormat}" Foreground="{StaticResource ListViewItemOverlaySecondaryForegroundThemeBrush}" Style="{StaticResource BMA_ListItemText}"/>
                            <TextBlock Text=" - " Foreground="{StaticResource ListViewItemOverlaySecondaryForegroundThemeBrush}" Style="{StaticResource BMA_ListItemText}"/>
                            <TextBlock Text="{Binding ToDate, Converter={StaticResource statusconverter}, ConverterParameter=dateFormat}" Foreground="{StaticResource ListViewItemOverlaySecondaryForegroundThemeBrush}" Style="{StaticResource BMA_ListItemText}" />
                        </StackPanel>
                        <TextBlock Grid.Row="2" Text="End: " Foreground="{StaticResource ListViewItemOverlaySecondaryForegroundThemeBrush}" Style="{StaticResource BMA_ListItemText}" />
                        <Grid Grid.Row="2" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="{Binding DaysLeftPercent, Converter={StaticResource statusconverter}, ConverterParameter=DaysLeftPercent}"></ColumnDefinition>
