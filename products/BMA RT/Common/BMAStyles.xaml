<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dataModel="using:BMA.DataModel">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="StandardStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <dataModel:StatusConverter x:Key="statusconverter" />

    <Style x:Name="pageHeader" TargetType="StackPanel">
        <Setter Property="Background" Value="#EEEEEE" />
        <Setter Property="Opacity" Value="1" />
    </Style>

    <Style x:Name="footerCharm" TargetType="AppBar">
        <Setter Property="Background" Value="#EEEEEE" />
    </Style>

    <Style x:Name="pageSubTitle" TargetType="TextBlock">
        <Setter Property="Margin" Value="5 -5 0 3" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="34" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="Typography.StylisticSet20" Value="True"/>
        <Setter Property="Typography.DiscretionaryLigatures" Value="True"/>
        <Setter Property="Typography.CaseSensitiveForms" Value="True"/>
    </Style>

    <Style x:Key="BMA_Main_Box" TargetType="Border">
        <Setter Property="Background" Value="DarkKhaki" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="Margin" Value="5" />
    </Style>
    
    <Style x:Key="BMA_Text_Large" TargetType="TextBlock"  BasedOn="{StaticResource SubheaderTextStyle}">
        <Setter Property="FontSize" Value="44"/>
        <Setter Property="Padding" Value="0 5"/>
        <Setter Property="Margin" Value="0 0 0 5"></Setter>
    </Style>

    <Style x:Key="BMA_Text_Medium" TargetType="TextBlock"  BasedOn="{StaticResource SubheaderTextStyle}">
        <Setter Property="FontSize" Value="22"/>
