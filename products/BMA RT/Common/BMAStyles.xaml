    <DataTemplate x:Key="BMA_Transaction_ItemTemplate">
        <Grid Width="420">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <!--IMAGE-->
            <Border Grid.Column="0" Background="{StaticResource ListViewItemPlaceholderBackgroundThemeBrush}" >
                <Image Source="{Binding TransactionType, Converter={StaticResource statusconverter}}" Stretch="None" Opacity="1.0"/>
            </Border>
            <!--CONTENT-->
            <Grid Grid.Column="1" Background="{StaticResource ListViewItemOverlayBackgroundThemeBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="50"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel VerticalAlignment="Bottom" >
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Amount: "  Style="{StaticResource TitleTextStyle}" Height="30" Margin="15,0,15,0"/>
                        <TextBlock Text="{Binding Amount}" Foreground="{StaticResource ListViewItemOverlayForegroundThemeBrush}" Style="{StaticResource TitleTextStyle}"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Name of place: " Style="{StaticResource TitleTextStyle}" Margin="15,0,15,0"/>
                        <TextBlock Text="{Binding NameOfPlace}" Foreground="{StaticResource ListViewItemOverlayForegroundThemeBrush}" Style="{StaticResource TitleTextStyle}"  Margin="15,0,5,5"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Date:" Style="{StaticResource CaptionTextStyle}" Margin="15,0,5,10"/>
                        <TextBlock Text="{Binding CreatedDate, Converter={StaticResource statusconverter}, ConverterParameter=dateFormat, Mode=TwoWay}" Foreground="{StaticResource ListViewItemOverlaySecondaryForegroundThemeBrush}" Style="{StaticResource CaptionTextStyle}" Margin="15,0,15,10"/>
                    </StackPanel>
                </StackPanel>
                <Grid Grid.Column="1" Background="Red" 
                            Visibility="{Binding Path=IsDeleted, 
                                                    Converter={StaticResource statusconverter},  
                                                    ConverterParameter=transIsDeleted}">
                    <TextBlock Text="&#xE106;" Style="{StaticResource BMA_DeletedItem_Icon}"/>
                </Grid>
            </Grid>
        </Grid>
    </DataTemplate>

