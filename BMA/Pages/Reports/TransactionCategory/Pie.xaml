<common:LayoutAwarePage
    x:Class="BMA.Pages.Reports.TransactionCategory.Pie"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BMA.Pages.Reports"
    xmlns:common="using:BMA.Common"
    xmlns:Charting="using:DataVirtualization.Toolkit.Charting"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.5">
                <LinearGradientBrush.RelativeTransform>
                    <CompositeTransform CenterY="0.5" CenterX="0.5" Rotation="180"/>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="#FFA0AA05"/>
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#7FA0AA0A" Offset="0.34"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Charting:PieChart x:Name="chart" HorizontalAlignment="Left" VerticalAlignment="Top" Height="400" Width="600"/>
    </Grid>
</common:LayoutAwarePage>